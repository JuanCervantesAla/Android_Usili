<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="30dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <ImageView
                android:id="@+id/imgV_enRV"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"></ImageView>

            <LinearLayout
                android:id="@+id/linear_enRV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/imgV_enRV"
                android:layout_toRightOf="@id/linear_enRV"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTitulo_enRV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="--------"
                    android:textColor="@color/black"
                    android:textSize="17dp"></TextView>

                <TextView
                    android:id="@+id/txtAutor_enRV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="--------"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    ></TextView>

                <TextView
                    android:id="@+id/txtID_enRV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="--------"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    ></TextView>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>